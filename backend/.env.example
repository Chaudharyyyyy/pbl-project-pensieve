# Pensieve Backend Environment Variables
# Copy to .env and configure for your environment

# Application
APP_NAME=Pensieve
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL with pgvector)
DATABASE_URL=postgresql+asyncpg://pensieve:pensieve@localhost:5432/pensieve
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis (for session management)
REDIS_URL=redis://localhost:6379/0

# Security - CHANGE IN PRODUCTION!
SECRET_KEY=your-super-secret-key-min-32-characters-long-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
PASSWORD_MIN_LENGTH=8

# Encryption
ENCRYPTION_ITERATIONS=100000

# ML Models
EMOTION_MODEL_PATH=./models/emotion
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# Rate Limiting
MAX_ENTRIES_PER_DAY=50
MAX_REFLECTIONS_PER_WEEK=2

# Confidence (ethical constraint)
MAX_CONFIDENCE_SCORE=0.80

# CORS
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
